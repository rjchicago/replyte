{
  "manifest_version": 3,
  "name": "Replyte",
  "version": "1.0.0",
  "description": "Help users reply faster on X with high-quality, reusable responses and nicknames.",
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Replyte",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png", 
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["manager.html"],
      "matches": ["<all_urls>"]
    }
  ]
}